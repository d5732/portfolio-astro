---
import { info } from "@data";

import Layout from "@layouts/Layout.astro";
import Hero from "@components/home/Hero.astro";
import Experience from "@components/home/Experience.astro";
import ProjectsWrapper from "@components/home/ProjectsWrapper.astro";
import MetaHead from "@components/general/MetaHead.astro";

const featuredProjects = info.projects.reduce(
    (featuredProjects, project, index) => {
        if (project.isFeatured) {
            featuredProjects.push(project);
        }
        return featuredProjects;
    },
    []
);
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <MetaHead
            title={"Portfolio"}
            description={info.metaDescriptions.home}
            ogImageUrl={info.ogImageUrl}
        />
    </head>
    <body>
        <Layout>
            <Hero name={info.name} summary={info.summary} />
            <Experience title={"EXPERIENCE"} details={info.experience} />
            <Experience title={"EDUCATION"} details={info.education} />
            <Experience
                title={"CERTIFICATIONS"}
                details={info.certifications}
            />
            <div class="flex">
                <a
                    target="_blank"
                    href={info.resumeUrl}
                    aria-label="download-resume"
                    id="download-resume"
                    class="mb-16 rounded-lg bg-slate-200 p-4 dark:bg-[#202020] dark:text-light"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="18"
                        height="18"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="feather feather-download inline pb-[3px]"
                        ><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"
                        ></path><polyline points="7 10 12 15 17 10"
                        ></polyline><line x1="12" y1="15" x2="12" y2="3"
                        ></line></svg
                    >
                    <span class="ml-1">Download My Resume</span>
                </a>
            </div>
            <section>
                <h2 class="mt-16 w-[15rem] dark:text-light">
                    FEATURED PROJECTS
                </h2>
                <ProjectsWrapper projects={featuredProjects} />
            </section>
        </Layout>
    </body>
</html>
