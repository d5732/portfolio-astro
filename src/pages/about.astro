---
import { info } from "@data";

import MetaHead from "@components/general/MetaHead.astro";
import Layout from "@layouts/Layout.astro";

const pClasses = "dark:text-light text-lg mb-8";
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <MetaHead
            title={"About"}
            description={"My bio is available on this page."}
            ogImageUrl={info.ogImageUrl}
        />
    </head>

    <body>
        <Layout>
            <section>
                <h1 style="line-height: 1.2;">About</h1>
                <div class="my-16 w-full">
                    {
                        info.aboutFull.map((item) => (
                            <p class={`${pClasses}`}>{item}</p>
                        ))
                    }
                </div>
            </section>
        </Layout>
    </body>
</html>
