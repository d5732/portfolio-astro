---
import { IHeroProps } from "@types";

const { name, summary } = Astro.props as IHeroProps;
const avatar_url = "https://avatars.githubusercontent.com/u/113398750?v=4";
---

<section>
    <div class="mt-[0px] flex flex-wrap justify-between sm:mt-[141px]">
        <div class="w-full dark:text-light">
            <p class="mt-4 dark:text-light">Hello! I am</p>
            <div class="mt-8 flex items-center justify-between">
                <div class="flex flex-col">
                    <h1 class="my-0 flex flex-wrap">
                        {name}
                    </h1>
                </div>
                <img
                    class="h-24 w-24 rounded-full xl:h-28 xl:w-28"
                    id="avatar"
                    alt=""
                    src={avatar_url}
                />
            </div>
        </div>
    </div>
    <p class="mt-10 mb-16 text-lg dark:text-light">
        {summary}
    </p>
</section>
