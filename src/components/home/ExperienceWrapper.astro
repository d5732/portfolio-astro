---
import type { IExperienceProps } from "@types";

type Props = IExperienceProps;

const { heading, items } = Astro.props;
---

<article
  class="flex flex-col items-start justify-between dark:text-light sm:flex-row"
>
  <h2 class="w-[15rem]">{heading}</h2>
  <div class="flex w-full flex-col gap-16">
    {
      items.map((item) => (
        <section>
          <div class="flex flex-wrap items-start justify-between">
            <div>
              <h3 class="text-xl font-semibold">{item.title}</h3>
              <h3 class="text-xl font-semibold">{item.name}</h3>
            </div>
            <p class="mt-[0.3125rem] text-sm dark:text-gray">
              {item.startDate} â€“ {item.endDate}
            </p>
          </div>
          <p class="mt-3 text-sm text-darkblue dark:text-blue">
            {item.location}
          </p>
          <ul class="mt-3 ml-6 text-lg leading-relaxed xl:ml-0">
            {item.description.map((item, index, arr) => {
              const isLast = index === arr.length - 1;
              return (
                <li
                  class:list={[
                    "max-w-lg list-disc dark:text-gray",
                    { "mb-6": !isLast },
                  ]}
                >
                  <div>{item}</div>
                </li>
              );
            })}
          </ul>
        </section>
      ))
    }
  </div>
</article>
